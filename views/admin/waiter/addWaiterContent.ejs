<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../../includes/navigation.ejs') %>

   <main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-waiter<% } %>" method="POST">
        <div class="form-control">
            <label for="language">Language</label>
            <select   name= "language" class="form-select form-select-sm" aria-label=".form-select-sm example" id="language">
                    <% 
                    if (langs.length > 0) { %>
                        <% for (let lang of langs) {  %>
                            <option value="<%= lang.lang%>"><%= lang.lang%></option>
                            <%}%>
                            <%} %>
                        </select>
                    </div>
                    <div class="form-control">
            <label for="buttonMenu">Button Menu</label>
            <input type="text" name="buttonMenu" id="buttonMenu" value="<% if (editing) { %><%= language.language %><% } %>">
        </div>
        <div class="form-control">
            <label for="pageTitle">Page Title </label>
            <input type="text" name="pageTitle" id="pageTitle" value="<% if (editing) { %><%= product.price %><% } %>">
        </div>
        <div class="form-control">
            <label for="pageContent">Page Content</label>
            <textarea name="pageContent" id="pageContent" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
        </div>
        <% if (editing) { %>
            <input type="hidden" value="<%= product.id %>" name="productId">
        <% } %>

        <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Page Content<% } %></button>
    </form>
</main>
<%- include('../../includes/end.ejs') %>